#include <dt-bindings/zmk/matrix_transform.h>

/ {
    /* --- キースキャン（4行×5列）。XIAOインタコネクト外のnRFピンは &gpioX Y で指定（公式の記法）:contentReference[oaicite:5]{index=5} */
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";
        /* ダイオード向きは仮で col2row。実機が row2col ならここを変更してください（重要） */
        diode-direction = "col2row";
        wakeup-source;

        row-gpios =
            <&gpio0 3  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  /* P0.03 */
            <&gpio0 28 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  /* P0.28 */
            <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,  /* P0.29 */
            <&gpio1 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;  /* P1.11 */

        col-gpios =
            <&gpio1 15 GPIO_ACTIVE_HIGH>, /* P1.15 */
            <&gpio1 14 GPIO_ACTIVE_HIGH>, /* P1.14 */
            <&gpio1 13 GPIO_ACTIVE_HIGH>, /* P1.13 */
            <&gpio1 12 GPIO_ACTIVE_HIGH>, /* P1.12 */
            <&gpio0 9  GPIO_ACTIVE_HIGH>; /* P0.09 (NFC1) → XIAOでGPIO化済で使う場合のみ */
    };

    /* --- 行列→キー位置のマッピング（splitは“合体後”の列数を指定、公式の手順）:contentReference[oaicite:6]{index=6} */
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <10>; /* 左5列 + 右5列 */
        map = <
            /* Row0: L(C0..C4)            |  R(C5..C9) */
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)  RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9)
            /* Row1 */
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)  RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9)
            /* Row2 */
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)  RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9)
            /* Row3 */
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)  RC(3,5) RC(3,6) RC(3,7) RC(3,8) RC(3,9)
        >;
    };

    /* --- physical-layout（Basic版、Studio不要。公式のBasic例に準拠）:contentReference[oaicite:7]{index=7} */
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        kscan = <&kscan0>;
        transform = <&default_transform>;
    };

    /* --- chosen: 既定のレイアウト指定（公式の指示）:contentReference[oaicite:8]{index=8} */
    chosen {
        zmk,physical-layout = &physical_layout0;
        zmk,kscan = &kscan0;
    };
};

